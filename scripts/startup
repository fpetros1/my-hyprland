#!/bin/bash

# Apply themes
gtkconfig &

# Lauch notification daemon (swaync)
notifications &

# Lauch statusbar (waybar)
statusbar &

# Polkit
/usr/lib/polkit-kde-authentication-agent-1 &

# Hyprpaper
wallpaper &

# Nextcloud Native:
nextcloud --background &

# Easy Effects Service
easyeffects --gapplication-service &

# Nextcloud Snap:
#nextcloud-desktop-client.nextcloud --background &

# Blueman Applet
blueman-applet &

# KDE Connect
/usr/lib/kdeconnectd &
kdeconnect-indicator &

# PlayerCTLD
playerctld daemon &

# XWaylandPrimary
xwayland-config &

# Bitwarden
bitwarden-desktop &

