#!/bin/bash

SCRIPTSDIR=$HOME/.config/hypr/scripts

# Apply themes
${SCRIPTSDIR}/gtkconfig &

# Lauch notification daemon (swaync)
${SCRIPTSDIR}/notifications &

# Lauch statusbar (waybar)
${SCRIPTSDIR}/statusbar &

# Polkit
/usr/lib/polkit-kde-authentication-agent-1 &

# Hyprpaper
${SCRIPTSDIR}/wallpaper &

# Nextcloud Native:
nextcloud --background &

# Easy Effects Service
easyeffects --gapplication-service &

# Nextcloud Snap:
#nextcloud-desktop-client.nextcloud --background &

# Blueman Applet
blueman-applet &

# KDE Connect
/usr/lib/kdeconnectd &
kdeconnect-indicator &

# PlayerCTLD
playerctld daemon &

# XWaylandPrimary
${SCRIPTSDIR}/xwayland-config &

# Bitwarden
bitwarden-desktop &

